{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">Saison :{{ season.number }}</h1>
            <p> Titre :{{ season.description }}</p>

    <ul>
        {% for episode in season.episodes %}
            <li>{{loop.index}}-- Titre : {{episode.title}} -- <a href={{ path('program_episode_show', {program: program.id, season: season.id, episode: episode.id }) }}>Voir épisode</a></li>
        {% endfor %}
    </ul>

</ul>

        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}