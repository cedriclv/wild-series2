{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}
{% block javascript %}

{% endblock %}
{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{asset('uploads/images/posters/'~program.poster)}}" alt="{{ program.title }} posterr">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <h2 id= "duration"> <strong> Durée totale de la série : {{programDuration}}</strong> </h2>   
            <p>Catégorie : {{ program.category.name }}</p>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% if app.user.isInWatchlist(program) %}
                    <a id= "watchlist"  href="{{ path('program_removeFromWatchList', {id: program.id})}}">
                        <i class="bi {{ app.user.isInWatchlist(program) ? 'bi-heart-fill' : 'bi-heart' }}"></i>
                    </a>                                                
                {% else %}
                    <a id= "watchlist" href="{{ path('program_addToWatchList', {id: program.id})}}">
                        <i class="bi {{ app.user.isInWatchlist(program) ? 'bi-heart-fill' : 'bi-heart' }}"></i>
                    </a>                                
                {% endif %}
            {% endif %}
    <ul>
        {% for season in program.seasons %}
            <li>{{ season.number }} //
            <a href={{ path("program_season_show", {program: program.id, season: season.id }) }}>Voir saison</a>
            </li>
        {% endfor %}
    </ul>

        </div>
    </div>

    <div>
        <strong>Acteurs :</strong>
        <ul>
            {% for actor in program.actors %}
                <li><a href={{ path('actor_show', { id: actor.id }) }}>{{ actor.name }}</a></li>
            {% else %}
                <li>Aucun acteur pour cette série</li>
            {% endfor %}
        </ul>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}